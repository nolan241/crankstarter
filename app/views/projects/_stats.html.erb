<div class="project-stats">

		<!-- number of backers -->
		<div class="col-xs-4 col-sm-12">
			<div class="val">
				<%= @pledges.count %>
			</div>
			<div class="lab">
				backers
			</div>
		</div>

		<!-- goal -->
		<div class="col-xs-4 col-sm-12">
			<div class="val">
				<%= number_to_currency(@project.total_backed_amount, unit: "$", precision: 0) %>
			</div>
			<div class="lab">
				goal
			</div>
		</div>

		<!-- days to go -->
		<div class="col-xs-4 col-sm-12">
			<div class="val">
				<%= @days_to_go %> 
			</div>
			<div class="lab">
				days to go
			</div>
		</div>

</div>