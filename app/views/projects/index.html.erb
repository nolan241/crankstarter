<% if @displayed_projects.any? %>

<%= render "carousel", projects: @displayed_projects %>

<div class="container">
	<br><br><br>
	<h3 class="project-subtitle">Our Project</h3>
	<div class="row">
		<!-- passing the projects variable to the carousel partial, which is going to include the 4 displayed projects. -->
		<%= render @projects %>
	</div>
</div>

<% else %>

<div class="container text-center">
	<br><br><br>
	<h2>Create your first project</h2>
	<%= link_to "Start project!", new_project_path, class: "btn btn-success btn-lg" %>
</div>

<% end %>